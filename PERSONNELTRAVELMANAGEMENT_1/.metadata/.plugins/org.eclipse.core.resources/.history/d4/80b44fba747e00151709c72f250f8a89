package com.Controller;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.TravelDa.AccountDa;
import com.TravelEntity.AccountEntity;

@WebServlet("/Account")
public class Account extends HttpServlet {
	private static final long serialVersionUID = 111222333;
	private AccountDa accda;
	private AccountEntity accent;
	
	public Account(){
	super();
	accda = new AccountDa();
	}
	
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub		
		response.setContentType("text/html");
		//PrintWriter out = response.getWriter();
		String user = request.getParameter("username");
		String pass = request.getParameter("password");
		
		if(user.trim().length() > 0 && pass.trim().length() > 0)
		{
			accent = new AccountEntity();
			accent.setUsername(user);
			accent.setPassword(pass);
			if(accda.checkLogin() < 1)
			{
				 RequestDispatcher rd =request.getRequestDispatcher("Dashboard.html");  
			     rd.forward(request,response);
			}
			if(accda.checkLogin() > 0){
				RequestDispatcher rd =request.getRequestDispatcher("False.html");  
			     rd.forward(request,response);
			}
		}
		else {
			RequestDispatcher rd =request.getRequestDispatcher("Emptyvalues.html");  
		     rd.forward(request,response);
		     }
		
		//doPost(request, response);
		//out.close();
	}
}
