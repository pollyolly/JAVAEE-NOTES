<script type="text/javascript">
$(document).ready(function() {
  //$("#e1").select2(),
    $("#val1").hide();
    $("#val2").hide();
    $("#val3").hide();
    $("#val4").hide();
    $("#val5").hide();
    $("#val6").hide();
    $("#val7").hide();
    $("#val8").hide();
    $("#val9").hide();
    //$("#val10").hide();
  $('#typeID').change(function() {
    var type = $(this).val();

    switch(type){
        case 'Flight':
            $("#val1").show();
            $("#val2").show();
            $("#val3").hide();
            $("#val4").hide();
            $("#val5").hide();
            $("#val6").hide();
            $("#val7").hide();
            $("#val8").hide();
            $("#val9").show();
            $("#val10").hide();
        break;
        case 'Hotel':
		for(var i = 1; i<9; i++){
			if(i == 3 || i == 4){
				$("#val"+i).show();
			}
			else{
				$("#val"+i).hide();
			}
			
		}

        $("#val9").show();
        $("#val10").hide();
        break;
        case 'Car':
            $("#val5").show();
            $("#val6").show();
            $("#val7").show();
            $("#val8").show();
            $("#val1").hide();
            $("#val2").hide();
            $("#val3").hide();
            $("#val4").hide();
            $("#val9").show();
            $("#val10").hide();
        break;
    default:
            $("#val1").hide();
            $("#val2").hide();
            $("#val3").hide();
            $("#val4").hide();
            $("#val5").hide();
            $("#val6").hide();
            $("#val7").hide();
            $("#val8").hide();
            $("#val9").hide();
            $("#val10").show();

    }

  });

});

</script>
