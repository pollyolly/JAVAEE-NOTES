	public boolean checkLogin()
	{
		try {
			ArrayList<String>list = new ArrayList<String>(); 
			ps = conn.prepareStatement(SelectAccount);
			//ps.setString(1, myAcc.getUsername());
			//ps.setString(2, myAcc.getPassword());
			rs = ps.executeQuery();
			//status = rs.next();
			while(rs.next()){
